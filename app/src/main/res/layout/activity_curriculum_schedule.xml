<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.nuaa.jc.jcmicroschool.CurriculumScheduleActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_curriculum_schedule"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.ToolBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_curriculum_schedule"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_curriculum_schedule"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar_curriculum_schedule"
        app:layout_constraintTop_toTopOf="@+id/toolbar_curriculum_schedule"
        app:srcCompat="@drawable/array_back_white" />

    <TextView
        android:id="@+id/textView_title_curriculum_schedule"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:text="@string/button_text_curriculum_schedule"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_curriculum_schedule"
        app:layout_constraintLeft_toRightOf="@+id/back_curriculum_schedule"
        app:layout_constraintTop_toTopOf="@+id/toolbar_curriculum_schedule" />

    <TextView
        android:id="@+id/textView_curriculum_schedule_week"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_curriculum_schedule" />

    <ImageView
        android:id="@+id/button_curriculum_schedule_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/textView_curriculum_schedule_week"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_curriculum_schedule"
        app:srcCompat="@drawable/array_left" />

    <ImageView
        android:id="@+id/button_curriculum_schedule_right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"

        android:layout_marginRight="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/textView_curriculum_schedule_week"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_curriculum_schedule"
        app:srcCompat="@drawable/array_right" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_curriculum_schedule_week">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">


            <GridLayout
                android:id="@+id/gridLayout_curriculum_schedule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnCount="8"
                android:nestedScrollingEnabled="true"
                android:rowCount="10">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周一" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周二" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周三" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周四" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周五" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周六" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周日" />


                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="24dp"
                    android:layout_height="102dp"

                    android:layout_column="0"
                    android:layout_row="1"
                    android:gravity="center"
                    android:text="1"

                    />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="24dp"
                    android:layout_height="102dp"

                    android:layout_column="0"
                    android:layout_row="2"
                    android:gravity="center"
                    android:text="2" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="24dp"
                    android:layout_height="102dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:gravity="center"
                    android:text="3" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="24dp"
                    android:layout_height="102dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:gravity="center"
                    android:text="4" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="24dp"
                    android:layout_height="102dp"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:gravity="center"
                    android:text="5" />


            </GridLayout>
        </HorizontalScrollView>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar_curriculum_schedule"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"/>




</android.support.constraint.ConstraintLayout>
