<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.nuaa.jc.jcmicroschool.ResultsQueryActivity"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_results_query"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"

        android:theme="@style/AppTheme.ToolBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
        <!--android:theme="?attr/actionBarTheme"-->
    <TextView
        android:id="@+id/textView_results_query_GPA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/colorWhite"
        android:text="GPA：4.1 - 非常优秀！"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_results_query" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_results_query"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_results_query_GPA"
        app:layout_constraintVertical_bias="0.0">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/back_results_query"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar_results_query"
        app:layout_constraintTop_toTopOf="@+id/toolbar_results_query"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_results_query"
        app:srcCompat="@drawable/array_back_white" />

    <TextView
        android:id="@+id/textView_title_results_query"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="@string/button_text_results_query"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_results_query"
        app:layout_constraintLeft_toRightOf="@+id/back_results_query"
        app:layout_constraintRight_toRightOf="@+id/toolbar_results_query"
        app:layout_constraintTop_toTopOf="@+id/toolbar_results_query" />

    <ProgressBar
        android:id="@+id/progressbar_results_query"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_results_query" />

</android.support.constraint.ConstraintLayout>
